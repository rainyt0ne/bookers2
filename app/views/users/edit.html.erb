<div class="text-success">
  <%= flash[:notice] %>
</div>
<div class="text-danger ml-3">
<% if @user.errors.any? %>
  <h2>
    <%= @user.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul class="ml-5">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 pt-3 mx-auto">
      <h2>
        <i class="fa-solid fa-circle-info"></i>
        <strong>
          User info
        </strong>
      </h2>
          <%= form_with model:@user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>
          <div class="form-group">
            <label for="inputImage">ProfileImage</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-success" %>
          </div>
          <% end %>
    </div>
  </div>
</div>