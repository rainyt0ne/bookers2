<%= render 'books/info' %>
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', user: @users %>
      <div class="col-md-8 offset-md-1">
        <h2>
          <i class="fa-solid fa-book-tanakh"></i>
          <strong>
            Books
          </strong>
        </h2>
        <table class="table">
          <thead>
            <tr>
              <th>
                <strong>User image</strong>
              </th>
              <th>
                <strong>Title</strong>
              </th>
              <th>
                <strong>Opinion</strong>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |books| %>
            <tr>
              <td>
                <%= link_to user_path(@users.id) do %>
                  <%= image_tag @users.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to books.title, book_path(books) %></td>
              <td><%= books.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>