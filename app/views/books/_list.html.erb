<div class="col-md-4">
  <h2>
    <i class="fa-solid fa-circle-info"></i>
    <strong>
       User info
    </strong>
  </h2>
  <%= image_tag 'no_image.jpg', class: "border mb-2" %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th>
        <strong>
          <%= current_user.name %>
        </strong>
        </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
       </tr>
    </tbody>
  </table>
  <div class="row">
    <a href="/users/edit">
      <button type="button" class="btn btn-default btn-block border-dark">
         <i class="fa-solid fa-gear"></i>
          Edit User Information
      </button>
    </a>
    <h2 class="pt-3 ml-3">
      <i class="fa-solid fa-circle-plus"></i>
        <strong>
          New book
        </strong>
     </h2>
      <%= form_with model:Book, url: '/books', method: :post do |f| %>
        <div class="form-group pl-3">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group pl-3">
          <p>Opinion</p>
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group pl-3">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
        <% end %>
  </div>
</div>
