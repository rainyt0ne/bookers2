<%= render 'books/info' %>
<main>
  <div class="container ml-12 mt-3 mx-auto">
    <div class="row">
      <%= render 'books/list' %>
      <div class="col-md-8">
        <h2>
          <i class="fa-solid fa-book-tanakh"></i>
          <strong>
            Books
          </strong>
        </h2>
        <table class="table">
          <thead>
            <tr>
              <th>
                <strong>User image</strong>
              </th>
              <th>
                <strong>Title</strong>
              </th>
              <th>
                <strong>Opinion</strong>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag 'no_image.jpg' %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.opinion %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>