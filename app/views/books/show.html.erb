<%= render 'books/info' %>
<main>
  <div class="container ml-12 mt-3 mx-auto">
    <div class="row">
      <%= render 'books/list' %>
      <div class="col-md-8">
        <h2>
          <i class="fa-solid fa-book-tanakh"></i>
          <strong>
            Book detail
          </strong>
        </h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag 'no_image.jpg' %>
                <%= link_to current_user.name, user_path %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.opinion %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>